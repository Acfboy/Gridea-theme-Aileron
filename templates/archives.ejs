<html>
  <head>
    <%- include('./includes/head', { siteTitle: themeConfig.siteName }) %>
  </head>
  <style>
    @keyframes fade-in {  
    	0% {opacity: 0;}/*初始状态 透明度为0*/  
    	40% {opacity: 0;}/*过渡状态 透明度为0*/  
    	100% {opacity: 0.8;}/*结束状态 透明度为1*/  
    }  
    @-webkit-keyframes fade-in {/*针对webkit内核*/  
    	0% {opacity: 0;}  
    	40% {opacity: 0;}  
    	100% {opacity: 0.85;}  
    }  
    body {
 
	background:url('<%= site.customConfig.background%>')no-repeat;
	 
	width:100%;
	 
	height:100%;
	 
	background-size:100% 100%;
	 
	position:absolute;
	 
	filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(src='bg-login.png',sizingMethod='scale');
	background-attachment: fixed
	 
}
.post{
        opacity: <%= site.customConfig.messopacity%>;
        animation-duration: 1s;/*动画持续时间*/  
    	-webkit-animation:fade-in 1s;/*针对webkit内核*/  
    } 
    .site-header{
        opacity: <%= site.customConfig.headopacity%>;
    } 
    .right{
    	opacity: <%= site.customConfig.idopacity%>;
    }
</style>
  <body>
     <%- include('./includes/header') %>
     <br></br>
    <div class="main">
      <div class = "right"><%- include('./includes/idcard') %></div>
      <div class="main-content">
        <%- include('./includes/post-list-archives') %>
    
        <%- include('./includes/pagination') %>
    
        <%- include('./includes/footer') %>
      </div>
    </div>
  </body>
</html>
